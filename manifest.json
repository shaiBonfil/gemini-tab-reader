{
    "manifest_version": 3,
    "name": "Gemini Tab Reader",
    "version": "1.0",
    "description": "Uses Google Gemini to answer your questions about the content of the current web page.",
    "author": "Your Name or Company",
    "permissions": ["activeTab", "scripting", "storage"],
    "host_permissions": ["https://generativelanguage.googleapis.com/"],
    "options_page": "options.html",
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}
